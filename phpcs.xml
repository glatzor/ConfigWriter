<?xml version="1.0"?>
<ruleset name="Julit">
    <description>Julit Coding Style</description>

    <file>app/</file>
    <exclude-pattern>*.blade.php</exclude-pattern>
    <exclude-pattern>*/Legacy/*</exclude-pattern>
    <exclude-pattern>*/Julnext/*</exclude-pattern>

    <arg value="s"/>
    <arg value="p"/>
    <arg name="colors"/>

    <rule ref="PSR2">
        <exclude name="Generic.Files.LineLength"/>
    </rule>
</ruleset>
